<%= form_with(model: slot, local: true) do |form| %>
  <% if slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(slot.errors.count, "error") %> prohibited this slot from being saved:</h2>

      <ul>
      <% slot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, id: :slot_start_time, :minute_step => 30 %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, id: :slot_end_time, :minute_step => 30 %>
  </div>

  <div class="field">
    <%= form.label :advisor_id %>
    <%= form.collection_select :advisor_id, Advisor.all, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>






